@page
@model Lab4.Pages.Movies.IndexModel

@{
    ViewData["Title"] = Config.Table1;
}

<h1>@Config.Table1</h1>

<p>
    <a asp-page="Create">@ConfigStrings.Add @ConfigStrings.MovieModel</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieModel[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieModel[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieModel[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieModel[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieModel[0].Price)
            </th>
            <th>Опции</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MovieModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">@ConfigStrings.Edit</a> | 
                <a asp-page="./Details" asp-route-id="@item.ID">@ConfigStrings.Details</a> | 
                <a asp-page="./Delete" asp-route-id="@item.ID">@ConfigStrings.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

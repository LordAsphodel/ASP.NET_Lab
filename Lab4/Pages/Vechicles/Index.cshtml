@page
@model Lab4.Pages.Vechicles.IndexModel

@{
    ViewData["Title"] = Config.Table2;
}

<h1>@Config.Table2</h1>

<p>
    <a asp-page="Create">@ConfigStrings.Add</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VechicleModel[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VechicleModel[0].ModelType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VechicleModel[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VechicleModel[0].RegistrationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VechicleModel[0].RegistrationCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VechicleModel[0].Distance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VechicleModel[0].WasRepaired)
            </th>
            <th>Опции</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.VechicleModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WasRepaired)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">@ConfigStrings.Edit</a> | 
                <a asp-page="./Details" asp-route-id="@item.ID">@ConfigStrings.Details</a> | 
                <a asp-page="./Delete" asp-route-id="@item.ID">@ConfigStrings.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
